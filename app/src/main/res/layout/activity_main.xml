<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_user_list_item"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="#3B9FFF"
        android:gravity="center"
        android:text="手机联系人"
        android:textColor="#fff" />

    <com.hither.lianxiren.views.SearchEditText
        android:id="@+id/txt_filter_edit"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp"
        android:layout_marginTop="12dp"
        android:background="@drawable/bg_query"
        android:hint="请输入关键字"
        android:paddingLeft="5dp"
        android:textAlignment="center"
        android:textSize="15.0dip" />

    <!-- contact user list -->
    <FrameLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">

        <ListView
            android:id="@+id/list_view_user_list"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="top"
            android:background="@drawable/bg_user_list_item"
            android:paddingLeft="6dp"
            android:paddingRight="6dp"></ListView>

        <TextView
            android:id="@+id/txt_dialog"
            android:layout_width="80.0dip"
            android:layout_height="80.0dip"
            android:layout_gravity="center"
            android:background="@drawable/ease_show_head_toast_bg"
            android:gravity="center"
            android:textColor="@color/white"
            android:textSize="30.0dip"
            android:visibility="invisible" />

        <com.hither.lianxiren.views.SideBar
            android:id="@+id/sild_bar"
            android:layout_width="30.0dip"
            android:layout_height="fill_parent"
            android:layout_gravity="center|right" />

        <TextView
            android:id="@+id/txt_user_list_user_num"
            android:layout_width="match_parent"
            android:layout_height="30dip"
            android:layout_gravity="bottom"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="35dp"
            android:background="#00ffffff"
            android:gravity="center"
            android:paddingBottom="5dp"
            android:text="123"
            android:textColor="@color/black"
            android:textSize="12sp" />
    </FrameLayout>

</LinearLayout>